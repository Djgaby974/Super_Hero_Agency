{% extends 'base.html.twig' %}

{% block title %}Edit Team{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto py-8 px-6 bg-white rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-6 text-yellow-600 text-center">Edit Team</h1>

    <!-- Affichage des erreurs de validation -->
    {% for message in app.flashes('error') %}
        <div class="bg-red-100 text-red-700 p-4 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    <form method="post" class="space-y-4">
        {{ form_start(form) }}

        {{ form_row(form.name, {
            'attr': {'class': 'w-full border rounded-lg p-2'}
        }) }}

        {{ form_row(form.leader, {
            'attr': {'class': 'w-full border rounded-lg p-2'}
        }) }}

        {{ form_row(form.members, {
            'attr': {'class': 'w-full border rounded-lg p-2'}
        }) }}
        
        {{ form_row(form.isActive, {
            'attr': {'class': 'form-check-input'}
        }) }}


        <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-500 transition-all">
            Update Team
        </button>

        {{ form_end(form) }}
    </form>
</div>
{% endblock %}
