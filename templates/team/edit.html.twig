{% extends 'base.html.twig' %}

{% block title %}Modifier une Équipe{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto py-8 px-6 bg-white rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-6 text-yellow-600 text-center">Modifier une Équipe</h1>

    <!-- Affichage des messages d'erreur -->
    {% for message in app.flashes('error') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">{{ message }}</span>
        </div>
    {% endfor %}

    <!-- Affichage des messages de succès -->
    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">{{ message }}</span>
        </div>
    {% endfor %}

    <!-- Formulaire -->
    <form method="post" class="space-y-4">
        {{ form_start(form) }}

        <!-- Nom de l'équipe -->
        {{ form_row(form.name, {
            'attr': {'class': 'w-full border border-gray-300 rounded-lg p-2'}
        }) }}

        <!-- Leader de l'équipe -->
        {{ form_row(form.leader, {
            'attr': {'class': 'w-full border border-gray-300 rounded-lg p-2'}
        }) }}

        <!-- Membres de l'équipe -->
        {{ form_row(form.members, {
            'attr': {'class': 'w-full border border-gray-300 rounded-lg p-2'}
        }) }}

        <!-- Statut actif -->
        {{ form_row(form.isActive, {
            'attr': {'class': 'form-check-input'}
        }) }}

        <!-- Bouton de mise à jour -->
        <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-500 transition-all">
            Mettre à Jour
        </button>

        {{ form_end(form) }}
    </form>
</div>
{% endblock %}
