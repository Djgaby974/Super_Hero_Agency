{% extends 'base.html.twig' %}

{% block title %}Créer une Équipe{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto py-8 px-6 bg-white rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-6 text-yellow-600 text-center">Créer une Nouvelle Équipe</h1>

    <!-- Affichage des messages d'erreur -->
    {% for message in app.flashes('error') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">{{ message }}</span>
        </div>
    {% endfor %}

    <!-- Affichage des messages de succès -->
    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">{{ message }}</span>
        </div>
    {% endfor %}

    <!-- Formulaire -->
    <form method="post" class="space-y-4">
        {{ form_start(form) }}

        <!-- Nom de l'équipe -->
        {{ form_row(form.name, {
            'attr': {'class': 'w-full border border-gray-300 rounded-lg p-2'}
        }) }}

        <!-- Leader de l'équipe (Choices.js) -->
        <div>
            <label for="{{ form.leader.vars.id }}" class="block text-gray-700 font-bold">{{ form_label(form.leader) }}</label>
            {{ form_widget(form.leader, { 'attr': {'class': 'js-choices'} }) }}
        </div>

        <!-- Membres de l'équipe (Choices.js) -->
        <div>
            <label for="{{ form.members.vars.id }}" class="block text-gray-700 font-bold">{{ form_label(form.members) }}</label>
            {{ form_widget(form.members, { 'attr': {'class': 'js-choices'} }) }}
        </div>

        <!-- Statut actif (Switchery) -->
        <div class="flex items-center space-x-2">
            {{ form_widget(form.isActive, { 'attr': {'class': 'js-switch-toggle'} }) }}
            <label for="{{ form.isActive.vars.id }}" class="text-gray-700 font-bold">{{ form_label(form.isActive) }}</label>
        </div>

        <!-- Bouton de création -->
        <button type="submit" class="bg-yellow-600 text-white px-4 py-2 rounded-lg hover:bg-yellow-500 transition-all">
            Créer l'Équipe
        </button>

        {{ form_end(form) }}
    </form>
</div>
{% endblock %}
