{% extends 'base.html.twig' %}

{% block title %}Heroes with {{ power.name }}{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto py-8 px-6 bg-white rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-6 text-yellow-600">
        Heroes with "{{ power.name }}"
    </h1>

    <p class="text-gray-700 mb-4">{{ power.description }}</p>

    {% if heroes is not empty %}
        <ul class="list-disc ml-6">
            {% for hero in heroes %}
                <li>
                    <a href="{{ path('app_super_hero_show', {id: hero.id}) }}" class="text-blue-600 hover:underline">
                        {{ hero.name }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="text-gray-500">No heroes with this power.</p>
    {% endif %}

    <a href="{{ path('app_power_index') }}" class="inline-block mt-4 bg-yellow-600 text-white px-4 py-2 rounded-lg hover:bg-yellow-500 transition-all">
        Back to Powers
    </a>
</div>
{% endblock %}
