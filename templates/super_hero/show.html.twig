{% extends 'base.html.twig' %}

{% block title %}SuperHero Details{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto py-8 px-6 bg-white rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold mb-6 text-yellow-600 text-center">
        {{ super_hero.name }}
    </h1>

    <!-- Image du Super-Héros -->
    {% if super_hero.imageName %}
        <div class="flex justify-center mb-6">
            <img src="{{ asset('uploads/' ~ super_hero.imageName) }}" alt="{{ super_hero.name }}" class="w-40 h-40 object-cover rounded-full border-4 border-yellow-600">
        </div>
    {% endif %}

    <!-- Détails -->
    <div class="space-y-4">
        <p><strong>Alter Ego:</strong> {{ super_hero.alterEgo ?: 'N/A' }}</p>
        <p><strong>Availability:</strong> {{ super_hero.isAvailable ? 'Yes' : 'No' }}</p>
        <p><strong>Energy Level:</strong> {{ super_hero.energyLevel }}%</p>
        <p><strong>Biography:</strong></p>
        <p>{{ super_hero.biography }}</p>
        <p><strong>Created At:</strong> {{ super_hero.createdAt ? super_hero.createdAt|date('Y-m-d') : 'Unknown' }}</p>
    </div>

    <!-- Boutons -->
    <div class="flex justify-between mt-6">
        <a href="{{ path('app_super_hero_index') }}" class="btn btn-secondary">Back to List</a>
        <a href="{{ path('app_super_hero_edit', {'id': super_hero.id}) }}" class="btn">Edit</a>
    </div>
</div>
{% endblock %}
