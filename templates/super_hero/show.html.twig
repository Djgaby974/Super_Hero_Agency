{% extends 'base.html.twig' %}

{% block title %}{{ super_hero.name }}{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto py-8 px-6 bg-white rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-6 text-yellow-600">
        {{ super_hero.name }}
    </h1>

    <p><strong>Alter Ego:</strong> {{ super_hero.alterEgo }}</p>
    <p><strong>Available:</strong> {{ super_hero.isAvailable ? 'Yes' : 'No' }}</p>
    <p><strong>Energy Level:</strong> {{ super_hero.energyLevel }}%</p>
    <p><strong>Biography:</strong> {{ super_hero.biography }}</p>

    <h2 class="text-xl font-bold mt-6">Powers</h2>
    {% if powers is not empty %}
        <ul class="list-disc ml-6">
            {% for power in powers %}
                <li>
                    <strong>{{ power.name }}</strong> (Level: {{ power.level }}) - {{ power.description }}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="text-gray-500">No powers assigned.</p>
    {% endif %}

    <div class="mt-6 flex justify-between">
        <a href="{{ path('app_super_hero_index') }}" class="inline-block bg-yellow-600 text-white px-4 py-2 rounded-lg hover:bg-yellow-500 transition-all">
            Back to List
        </a>
        <a href="{{ path('app_super_hero_edit', {'id': super_hero.id}) }}" class="inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-500 transition-all">
            Edit SuperHero
        </a>
    </div>
</div>
{% endblock %}
