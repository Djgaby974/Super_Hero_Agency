{% extends 'base.html.twig' %}

{% block title %}Edit SuperHero{% endblock %}

{% block body %}
<div class="max-w-xl mx-auto py-8 px-6 bg-white rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-6 text-yellow-600 text-center">
        Edit SuperHero
    </h1>

    <form method="post" enctype="multipart/form-data">
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

        <!-- Champ Name -->
        <div class="mb-4">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full border rounded-lg p-2', 'placeholder': 'Enter superhero name'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <!-- Champ Alter Ego -->
        <div class="mb-4">
            {{ form_label(form.alterEgo) }}
            {{ form_widget(form.alterEgo, {'attr': {'class': 'w-full border rounded-lg p-2', 'placeholder': 'Enter alter ego (optional)'}}) }}
            {{ form_errors(form.alterEgo) }}
        </div>

        <!-- Champ Availability (Switchery) -->
        <div class="mb-4">
            {{ form_label(form.isAvailable) }}
            {{ form_widget(form.isAvailable, {'attr': {'class': 'js-switch-toggle'}}) }}
            {{ form_errors(form.isAvailable) }}
        </div>

        <!-- Champ Energy Level -->
        <div class="mb-4">
            {{ form_label(form.energyLevel) }}
            {{ form_widget(form.energyLevel, {'attr': {'class': 'w-full border rounded-lg p-2', 'placeholder': 'Enter energy level', 'min': 0, 'max': 100}}) }}
            {{ form_errors(form.energyLevel) }}
        </div>

        <!-- Champ Biography -->
        <div class="mb-4">
            {{ form_label(form.biography) }}
            {{ form_widget(form.biography, {'attr': {'class': 'w-full border rounded-lg p-2', 'placeholder': 'Write a short biography'}}) }}
            {{ form_errors(form.biography) }}
        </div>

        <!-- Champ Upload Image -->
        <div class="mb-4">
            {{ form_label(form.image) }}
            {{ form_widget(form.image, {'attr': {'class': 'w-full border rounded-lg p-2'}}) }}
            {{ form_errors(form.image) }}
        </div>

        <!-- Champ Created At -->
        <div class="mb-4">
            {{ form_label(form.createdAt) }}
            {{ form_widget(form.createdAt, {'attr': {'class': 'w-full border rounded-lg p-2', 'placeholder': 'Select creation date'}}) }}
            {{ form_errors(form.createdAt) }}
        </div>

        <!-- Champ Powers (Choices.js) -->
        <div class="mb-4">
            {{ form_label(form.powers) }}
            {{ form_widget(form.powers, {'attr': {'class': 'js-choices', 'data-placeholder': 'Select powers'}}) }}
            {{ form_errors(form.powers) }}
        </div>

        <!-- Bouton Submit -->
        <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-500 transition-all">
            Save Changes
        </button>

        {{ form_end(form) }}
    </form>

    <div class="flex justify-between mt-6">
        <!-- Retour Ã  la liste -->
        <a href="{{ path('app_super_hero_index') }}" class="btn btn-secondary">
            Back to List
        </a>

        <!-- Suppression -->
        {{ include('super_hero/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
