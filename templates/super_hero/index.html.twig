{% extends 'base.html.twig' %}

{% block title %}Super Heroes{% endblock %}

{% block body %}
<h1 style="color: #1a1a40;">ðŸ¦¸ Super Heroes</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Alter Ego</th>
            <th>Availability</th>
            <th>Energy Level</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for super_hero in super_heroes %}
            <tr>
                <td>{{ super_hero.id }}</td>
                <td>{{ super_hero.name }}</td>
                <td>{{ super_hero.alterEgo }}</td>
                <td>{{ super_hero.isAvailable ? 'Yes' : 'No' }}</td>
                <td>{{ super_hero.energyLevel }}</td>
                <td>
                    <a href="{{ path('app_super_hero_show', {'id': super_hero.id}) }}" class="btn">View</a>
                    <a href="{{ path('app_super_hero_edit', {'id': super_hero.id}) }}" class="btn btn-secondary">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No heroes found</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_super_hero_new') }}" class="btn">Create New Super Hero</a>
{% endblock %}
