{% extends 'base.html.twig' %}

{% block title %}Modifier Mission{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto py-8 px-6 bg-white rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-6 text-green-600 text-center">Modifier Mission</h1>

    <!-- Affichage des erreurs de validation -->
    {% for message in app.flashes('error') %}
        <div class="bg-red-100 text-red-700 p-4 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="bg-green-100 text-green-700 p-4 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    <form method="post" class="space-y-4">
        {{ form_start(form) }}

        {{ form_row(form.title, {
            'attr': {'class': 'w-full border rounded-lg p-2'}
        }) }}

        {{ form_row(form.description, {
            'attr': {'class': 'w-full border rounded-lg p-2'}
        }) }}

        {{ form_row(form.startAt, {
            'attr': {'class': 'w-full border rounded-lg p-2'}
        }) }}

        {{ form_row(form.endAt, {
            'attr': {'class': 'w-full border rounded-lg p-2'}
        }) }}

        {{ form_row(form.location, {
            'attr': {'class': 'w-full border rounded-lg p-2'}
        }) }}

        {{ form_row(form.dangerLevel, {
            'attr': {'class': 'w-full border rounded-lg p-2'}
        }) }}

        {{ form_row(form.assignedTeam, {
            'attr': {'class': 'w-full border rounded-lg p-2'}
        }) }}

        <!-- Intégration de Choices.js pour les pouvoirs requis -->
        <div>
            <label for="requiredPowers" class="form-label">{{ form_label(form.requiredPowers) }}</label>
            {{ form_widget(form.requiredPowers, { 'attr': { 'class': 'js-choices' } }) }}
        </div>

        <!-- Intégration de Switchery.js pour le champ "Mission Réussie" -->
        <div class="flex items-center">
            <label for="isSuccessful" class="form-label mr-4">{{ form_label(form.isSuccessful) }}</label>
            {{ form_widget(form.isSuccessful, { 'attr': { 'class': 'js-switch-toggle' } }) }}
        </div>

        <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-500 transition-all">
            Mettre à jour
        </button>

        {{ form_end(form) }}
    </form>
</div>
{% endblock %}
